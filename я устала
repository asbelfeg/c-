<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diaryy</title>
</head>
<body>
    <div class="container">
        <main role="main">
            @* Блок вывода TempData (использует минимальные стили для отображения) *@
            @if (TempData["Success"] is string ok) 
            {
                <div style="padding: 10px; margin-bottom: 15px; border: 1px solid green; background-color: #d4edda; color: #155724;">
                    @Html.Raw(ok)
                </div>
            }
            @if (TempData["Error"] is string err) 
            {
                <div style="padding: 10px; margin-bottom: 15px; border: 1px solid red; background-color: #f8d7da; color: #721c24;">
                    @Html.Raw(err)
                </div>
            }

            @RenderBody()
        </main>
    </div>
    
    
    @RenderSection("Scripts", required: false) 
</body>
</html>
